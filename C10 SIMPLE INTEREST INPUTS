//INPUT 
Enter the principal amount: 2000
Enter the time duration: 1
Enter the rate of interst: 10
#include<stdio.h>
int main(){
    float p,t,r,si;
    printf("Enter the principal amount: ");
    scanf("%f", &p);
    printf("Enter the time duration: ");
    scanf("%f", &t);
    printf("Enter the rate of interst: ");
    scanf("%f", &r);
    si = p*t*r/100;
    printf("The simple interest is : %f\n", si);

}
//OUTPUT
Enter the principal amount: 2000
Enter the time duration: 1
Enter the rate of interst: 10
The simple interest is : 200.000000
